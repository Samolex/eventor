@using System.Globalization
@using Eventor_Project.Auth
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <style>
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/"><i class="glyphicon glyphicon-picture"></i> Logo</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Проекты", "Index","Projects")</li>
                    </ul>
                    <!--TODO: Search Form-->
                    <form class="navbar-form navbar-left center-block" role="search">
                        <div class="input-group">
                            <input type="text" name="search" value="" placeholder="Поиск..." class="form-control" />
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </span>
                        </div>
                    </form>
                        <ul class=" nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Создать", "Add", "Projects")</li>
                            @if (ViewBag.CurrentUser == null)
                            {
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                       role="button" aria-haspopup="true" aria-expanded="false">

                                        <i class="glyphicon glyphicon-log-in"></i> <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Вход", "Index", "Login")</li>
                                        <li>@Html.ActionLink("Регистрация", "Register", "User")</li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                       role="button" aria-haspopup="true" aria-expanded="false">

                                        @ViewBag.CurrentUser.Name <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <!--Insert your links here-->
                                        <li role="separator" class="divider"></li>
                                        <li>@Html.ActionLink("Выход", "Logout", "Login")</li>
                                    </ul>
                                </li>
                            }
                        </ul>
                </div>
            </div>
    </nav>
    <main>
        @RenderBody()
    </main>    
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/main")
    @RenderSection("scripts", false)
</body>
</html>

