@{
    ViewBag.Title = "NewPicture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model Eventor_Project.Models.Picture
<div class="container">
    <h2>Загрузить фотографию</h2>
    @using (Html.BeginForm("LoadPicture", "Album", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data"  }))
    {
        <div id="main" class="tab active">
            @Html.AntiForgeryToken()
            <fieldset>
                <legend>
                    @String.Format("Любую. Но приличную.")
                </legend>
                @Html.HiddenFor(m => m.OwnerId)

                <div class="form-group">
                    @Html.LabelFor(m => m.Name, "Название картинки")
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "Имя не должно быть пусто")
                </div>

                <div class="form-group">
                    <div class="editor-label">Файл изображения</div>
                    <div class="editor-field">
                        <input type="file" name="uploadImage" />
                    </div>

                </div>


                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        Загрузить!
                    </button>
                </div>

            </fieldset>


        </div>
    }
</div>